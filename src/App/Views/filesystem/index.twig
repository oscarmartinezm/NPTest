{% extends "layouts/main.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-10">
                                <h3 style="margin: 10px 0;">Filesystem</h3>
                            </div>
                            <div class="col-md-2" >
                                <a href="index.php?route=/filesystem/add/" class="btn btn-primary btn-md pull-right" style="margin: 10px 0;">Add new File or Directory</a>
                            </div>
                        </div>
                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="filesystem-table" class="table table-bordred table-striped">
                                <thead>
                                    <tr>
                                        <th>Index</th>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in filesystem %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ item.level_name|raw }}</td>
                                        <td>{{ item.type }}</td>
                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="" data-original-title="Edit">
                                                <a href="{!! route('hotel.edit', $hotel->id) !!}" class="btn btn-primary btn-xs" data-title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>
                                            </p>
                                        </td>
                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="" data-original-title="Delete">
                                                <a class="btn btn-danger btn-xs">
                                                    <span class="glyphicon glyphicon-trash"></span>
                                                </a>
                                            </p>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        $(function(){
            Helpers.dataTable('#filesystem-table', [-1, -2], false); 
        });
    </script>
{% endblock %}